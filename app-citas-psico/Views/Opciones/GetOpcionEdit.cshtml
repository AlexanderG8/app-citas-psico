@model OPCIONES
@{
    ViewData["Title"] = "Opción";
    var tipo = "E";
}
<form>
    <input type="hidden" asp-for="ID_OPCION" id="identificadorE">
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label>Opción</label>
                <input asp-for="OPCION" class="form-control" type="text" placeholder="Nombre de la opción" id="opcionE" />
            </div>
            <div class="form-group">
                <label>Controller</label>
                <input asp-for="CONTROLLER" class="form-control" type="text" placeholder="Nombre del controlador" id="controllerE" />
            </div>
            <div class="form-group">
                <label>Acción</label>
                <input asp-for="ACCION" class="form-control" type="text" placeholder="Nombre de la acción" id="accionE" />
            </div>
        </div>
    </div>
    <div class="col-sm-12" id="MensajeError">
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-primary" onclick="SaveOption(`@tipo`)" id="btnGuardar">Guardar</button>
    </div>
</form>